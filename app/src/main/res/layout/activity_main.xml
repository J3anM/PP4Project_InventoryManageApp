<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Inventory App"
            android:fontFamily="casual"
            android:textSize="24dp"
            android:textColor="@color/white"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="50dp"
                android:elevation="5dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/profileButton"
                        android:layout_width="182dp"
                        android:layout_height="157dp"
                        android:src="@drawable/user"
                        android:layout_marginTop="12dp"
                        android:scaleType="fitCenter"

                        />




                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="50dp"
                android:elevation="5dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/addToInventoryNext"
                        android:layout_width="182dp"
                        android:layout_height="157dp"
                        android:layout_row="2"
                        android:layout_column="5"
                        android:layout_marginTop="12dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/addtoinventory" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="50dp"
                android:elevation="5dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/listButton"
                        android:layout_width="182dp"
                        android:layout_height="157dp"
                        android:src="@drawable/list"
                        android:layout_marginTop="12dp"
                        android:scaleType="fitCenter"

                        />




                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="50dp"
                android:elevation="5dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/addOrderButton"
                        android:layout_width="182dp"
                        android:layout_height="157dp"
                        android:src="@drawable/addorder"
                        android:layout_marginTop="12dp"
                        android:scaleType="fitCenter"

                        />




                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="50dp"
                android:elevation="5dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/shippingButton"
                        android:layout_width="182dp"
                        android:layout_height="157dp"
                        android:src="@drawable/shippingorders"
                        android:layout_marginTop="12dp"
                        android:scaleType="fitCenter"

                        />




                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="50dp"
                android:elevation="5dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/MIssButt"
                        android:layout_width="182dp"
                        android:layout_height="157dp"
                        android:src="@drawable/addtoinventory"
                        android:layout_marginTop="12dp"
                        android:scaleType="fitCenter"

                        />




                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </GridLayout>






    </LinearLayout>

</ScrollView>